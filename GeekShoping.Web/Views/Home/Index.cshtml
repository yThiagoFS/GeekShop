@model IEnumerable<ProductViewModel>
@{
    ViewData["Title"] = "Geek Shop";
}
<form>
    <div class="container row">
        @foreach(var item in Model)
        {
            <div class="col-4">
                <div class="p-0 my-3 border">
                    <div class="card">
                        <img src="@item.ImageURL" class="card-img-top"/>
                        <div class="card-body">
                            <h3 class="card-title text-success">
                                @item.SubStringName()
                            </h3>
                            <span class="badge badge-light mb-2">
                                @item.CategoryName
                            </span>
                            <p class="card-text">
                                @Html.Raw(item.SubStringDescription())
                            </p>
                            <div class="row">
                                <div class="col pt-1">
                                    <span style="font-size:23px;">@item.Price.ToString("c")</span>
                                </div>
                                <div class="col">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success form-control">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</form>