@model IEnumerable<ProductModel>

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Products List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-primary">Create new product</a>
        </div>
    </div>    
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                 <th>
                     Cateogry
                </th>
                <th>
                    Price
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.CategoryName
                    </td>
                    <td>
                        @item.Price.ToString("c")
                    </td>
                    <td>
                        <a asp-action="ProductEdit">Edit Product</a>
                    </td>
                    <td>
                        <a asp-action="ProductDeleteConfirm" asp-route-id="@item.Id">Delete Product</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>